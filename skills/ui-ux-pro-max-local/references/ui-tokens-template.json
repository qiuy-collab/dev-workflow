{
  "meta": {
    "name": "project-ui-tokens",
    "version": "1.0.0"
  },
  "color": {
    "bg.canvas": "#F4F7FF",
    "bg.surface": "rgba(255, 255, 255, 0.75)",
    "text.primary": "#0C1424",
    "text.secondary": "#475569",
    "brand.primary": "#0C3BFF",
    "state.error": "#B91C1C"
  },
  "typography": {
    "font.family.base": "\"SF Pro Display\", \"SF Pro Text\", \"Helvetica Neue\", sans-serif",
    "font.size.body": "16px",
    "font.size.caption": "12px",
    "font.weight.regular": 400,
    "font.weight.medium": 500,
    "font.weight.bold": 700
  },
  "spacing": {
    "xs": "4px",
    "sm": "8px",
    "md": "12px",
    "lg": "16px",
    "xl": "24px"
  },
  "radius": {
    "sm": "8px",
    "md": "12px",
    "lg": "20px",
    "pill": "999px"
  },
  "shadow": {
    "sm": "0 10px 24px rgba(13, 24, 54, 0.16)",
    "md": "0 20px 60px rgba(13, 24, 54, 0.18)"
  },
  "motion": {
    "duration.fast": "150ms",
    "duration.normal": "200ms",
    "easing.standard": "ease"
  },
  "state": {
    "hover.opacity": 0.92,
    "active.scale": 0.99,
    "focus.ringColor": "rgba(12, 59, 255, 0.35)",
    "disabled.opacity": 0.5
  },
  "component": {
    "button": {
      "height.md": "40px",
      "padding.md": "8px 12px",
      "radius": "12px",
      "font.size": "14px"
    },
    "input": {
      "height.md": "40px",
      "padding.md": "8px 12px",
      "radius": "12px",
      "border.default": "1px solid rgba(12, 20, 36, 0.12)"
    },
    "card": {
      "padding.md": "12px",
      "radius": "16px",
      "shadow": "0 10px 24px rgba(13, 24, 54, 0.16)"
    },
    "list": {
      "item.gap": "8px",
      "item.padding": "10px",
      "item.radius": "12px"
    }
  }
}
